generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  CL
  PRNC
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

enum RegistrationType {
  CONTINGENT
  PRINCIPAL
}

model User {
  id               Int               @id @default(autoincrement())
  userId           String            @unique @default(cuid())
  email            String            @unique
  name             String
  registrationType RegistrationType?
  isBlocked        Boolean           @default(false)
  role             Role              @default(CL)
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  profile          Profile?
  participants     Participant[]
}

model Profile {
  id              Int      @id @default(autoincrement())
  user            User     @relation(fields: [userId], references: [userId])
  userId          String   @unique
  contact         String
  aadhaarFileUrl  String
  collegeIdUrl    String
  collegeName     String
  rejectionReason String?
  status          Status   @default(PENDING)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([status])
}

model Participant {
  id              Int      @id @default(autoincrement())
  name            String
  collegeName     String
  email           String
  contact         String
  aadhaarFileUrl  String
  idFileUrl       String
  cl              User     @relation(fields: [clId], references: [userId], onDelete: Cascade)
  clId            String
  event           Event    @relation(fields: [eventId], references: [eventId], onDelete: Cascade)
  eventId         String
  status          Status   @default(PENDING)
  rejectionReason String?
  submittedAt     DateTime @default(now())
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@unique([email, eventId])
  @@index([clId])
  @@index([eventId])
  @@index([status])
}

model Event {
  id          Int      @id @default(autoincrement())
  eventId     String   @unique @default(cuid())
  name        String
  category    String
  isActive    Boolean  @default(true)
  description String?
  minTeamSize Int
  maxTeamSize Int
  maxSlots    Int
  filledSlots Int      @default(0)
  isLocked    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  participants Participant[]

  @@index([category])
  @@index([isActive])
}
